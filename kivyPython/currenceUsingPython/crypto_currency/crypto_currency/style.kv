Screen_manager:
    Login_screen:
    Coine_screen: 
<Login_screen>:
    name: "login"
    MDFloatLayout:
        MDCard:
            size_hint: None, None
            size: 300, 500
            pos_hint: {"center_x": 0.5,"center_y": 0.5}
            elevation: 3
            padding: 25
            spacing: 25
            orientation: 'vertical'
            MDLabel:
                text: 'WELCOME'
                font_size: 40
                halign: 'center'
                # height:  self.texture_size[1]
                padding_y: 15

            MDTextField:
                id: user
                mode:"round"
                text:"@gmail.com"
                icon_right: "account"
                size_hint_x: None
                width: 250
                font_size: 18
                pos_hint: {"center_x": 0.5 }
                # hint_text: "Email"
                helper_text: "Example@gmail.com"
                validator: "email"
            MDTextField:
                id: pswrd
                mode:"round"
                hint_text: "password"
                icon_right: "eye-off"
                size_hint_x: None
                width: 250
                font_size: 18
                pos_hint: {"center_x": 0.5 }
                password: True
            MDFillRoundFlatButton:
                text: "Log IN"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_press: root.login(app)

