Screen:
    MDGridLayout:
        cols: 2
        MDFloatLayout:
            id: flut
            size_hint_x: 0.55
        MDFloatLayout:
            size_hint_x: 0.45
            MDCard:
                size_hint: None, None
                size: 300, 500
                pos_hint: {"center_x": 0.5,"center_y": 0.5}
                elevation: 3
                padding: 25
                spacing: 25
                orientation: 'vertical'
                MDLabel:
                    id: wellcome_lb
                    text: 'WELCOME'
                    font_size: 40
                    halign: 'center'
                    size_hint_y: None
                    padding_y: 15
                   
                MDTextField:
                    id: user
                    mode:"round"
                    text: "@gmail.com"
                    hint_text: "user name"
                    icon_right: "account"
                    size_hint_x: None
                    width: 250
                    font_size: 18
                    pos_hint: {"center_x": 0.5 }
            
                MDStackLayout:
                    MDTextField:
                        id: pswrd
                        mode:"round"
                        hint_text: "password"
                        size_hint_x: None
                        width: 250
                        font_size: 18
                        pos_hint: {"center_x": 0.5 }
                        password: True
                        
                    
                    MDIconButton:
                        icon: "eye-off"
                        pos_hint: {"center_y": .5}
                        pos: pswrd.width - self.width + dp(8), 0
                        theme_text_color: "Hint"
                        
                        on_release:
                            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                            pswrd.password = False if pswrd.password is True else True   
                        
                
                    
                        
                MDFillRoundFlatButton:
                    text: "sgin in"
                    font_size: 12
                    pos_hint: {"center_x": 0.5}
                    on_press: app.login()
                MDRoundFlatButton:
                    text: "UPDATE"
                    font_size: 12
                    pos_hint: {"center_x": 0.5}
                    on_press: app.update()
                    
                MDFillRoundFlatButton:
                    text: "Delete"
                    font_size: 12
                    pos_hint: {"center_x": 0.5}
                    on_press: app.delete()
                    md_bg_color: 251/255, 70/255, 70/255 ,0.75